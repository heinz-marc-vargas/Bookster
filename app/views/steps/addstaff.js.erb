<% unless @user.errors.empty?%>
	html = "<ul class='unstyled'>";
	<% @user.errors.keys.each do |k|%>
		html += "<li><%= k.to_s.capitalize %> <%= @user.errors[k].first %> </li>";
	<% end %>
	html += "</ul>";
	
	$(".alert-error").html(html).show();
<% else%>
  $(".staff-list").prepend("<%= escape_javascript(render(:partial => "/steps/staff", :locals => { :staff => @staff } )) %>");
  $("#staffModal").modal('hide');
<% end %>

