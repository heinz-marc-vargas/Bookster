 <h2><%= t :staff %></h2>

<% if @company.id %>
	<div class="head_controls">
	  <% if can?(:add, Staff) %>
	    <input id="add" type="button" class="btn" value="<%= t :staff_new %>" />
	  <% end %>
    <input id="back" type="button" class="btn" value="<%= t :refresh %>" />&nbsp;
  </div>

<% end %>

