<script>
	$('#add').click(function() {
		Application.load_content("<%= new_account_staff_path %>");
	});

	$('#back').click(function() {
		Application.load_content("<%= account_staffs_path %>");
	});

	$("#company_id").change(function(){
		if($(this).val() != "")
		{
	    Application.load_content(Routes.account_staffs_path({company_id: $(this).val()}));
	  }
	});
</script>
