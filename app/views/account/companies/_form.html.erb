<div class="control-group formSep">
  <label class="control-label">Company</label>
  <div class="controls text_line">
    <strong><%= f.object.name %></strong>
  </div>
</div>

<div class="control-group formSep">
  <label for="fileinput" class="control-label"><%= Company.human_attribute_name("logo") %></label>
  <div class="controls">
    <div data-fileupload="image" class="fileupload fileupload-new">
      <div style="width: 80px; height: 80px;" class="fileupload-new thumbnail">
        <% if !f.object.logo.blank? %>
          <%= image_tag(f.object.logo.thumb.url) %>
        <% end %>
      </div>

      <div style="width: 80px; height: 80px; line-height: 80px;" class="fileupload-preview fileupload-exists thumbnail">
        <%= image_tag(f.object.logo.thumb.url) %>
      </div>

      <span class="btn btn-file">
        <span class="fileupload-new">Select image</span>
        <span class="fileupload-exists">Change</span>
        <%= f.file_field(:logo, {:id => "fileinput"}) %>
      </span>
      <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
    </div>
  </div>
</div>

<%= f.input :name %>
<%= f.input :subdomain %>
<%= f.input :description %>
<%= f.input :status, as: :boolean %>
