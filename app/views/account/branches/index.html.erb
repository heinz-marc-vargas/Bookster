<div class="row-fluid">
   <div class="span12">

		<h3><%= t 'account.branches.title' %></h3>

		<% if params[:success] %>
		  <div class="alert alert-success">
		  	<a class="close" data-dismiss="alert">x</a>
		  	<p><%= params[:success] %></p>
		  </div>
		<% end %>

		<div class="tableactions">
		  <%= link_to_function(t('.add_new'), "Application.load_content('#{new_account_branch_path}')", :class => "btn" ) if can?(:add, Branch) && current_user.can_add_new_branch? %>
		</div>

		<table id="dt_branches" class="table table-striped table-bordered dTableR">
			<thead>
			<tr>
				<th><%= t('.branch_logo') %></th>
				<th><%= t('.branch_name')%></th>
				<th><%= t('.branch_address')%></th>
				<th><% t('.operate_days')%></th>
				<th><% t :actions %></th>
			</tr>
			</thead>
			<tbody>
				<tr>
				  <td class="dataTables_empty" colspan="4"><%= t :loading_data %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<script>
  GeboDatatbles.dt_branches("<%= account_branches_path %>");
</script>