<div class="row-fluid">
  <div class="span12">

    <h2 class="heading"><%= t :user_new_details %></h2>
    
    <div style="float:right;">
      <%= link_to_function t(:cancel_back_to_list), "Application.load_content('#{users_path}')", :class=>"btn btn-primary" %>
    </div>

    <%= simple_form_for @user, remote: true, html: {class: "form-horizontal"} do |f| %>
      <%= f.input :first_name, label: t(:first_name) %>
      <%= f.input :last_name, label: t(:last_name) %>
      <%= f.input :email, label: t(:email) %>
      <%= f.input :password, label: t(:password) %>
      <%= f.input :password_confirmation, label: t(:user_confirm_password) %>
      <%= f.input :country_id, collection: Country.all.collect {|c| [ c.language, c.id ]}, label: t(:language)%>
      <%= f.input :role, :collection => User::MAIN_ROLES %>      
      <%= f.button :submit, t(:user_saved_details) %>
    <% end %>

  </div>
</div>


<script>
  $("#user_role").chosen();
  $("#user_country_id").chosen();
</script>
